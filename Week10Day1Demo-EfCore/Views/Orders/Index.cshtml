@model IEnumerable<Week10Day1Demo_EfCore.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateTax)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.OrderTitle
                </td>
                <td>
                    @item.OrderDate
                </td>
                <td>
                    @item.StateTax
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-primary row-btn-size">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-primary row-btn-size">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger row-btn-size">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
